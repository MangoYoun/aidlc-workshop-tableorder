# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tableorder

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=16

# Session Configuration
SESSION_EXPIRE_HOURS=16
SESSION_LAST_ORDER_TIMEOUT_HOURS=2

# Environment
ENVIRONMENT=development

# CORS - Frontend URLs
FRONTEND_URL=http://localhost:5173,http://localhost:5174

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# AWS (로컬 개발 시 사용 안 함)
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=local-bucket
